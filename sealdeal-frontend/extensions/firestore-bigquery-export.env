# Configuration for Firestore to BigQuery export extension

# Collection path to sync (the main deals collection)
COLLECTION_PATH=deals

# BigQuery dataset where tables will be created
DATASET_ID=deal_analysis

# BigQuery table name for the exported data
TABLE_ID=deals_raw

# Cloud Function location
LOCATION=asia-south1

# Database region (required parameter)
DATABASE_REGION=asia-south1

# Whether to use the raw changelog or the latest snapshot
USE_EMULATOR=false

# Transform function (optional - leave empty for now)
TRANSFORM_FUNCTION=

# Clustering fields for BigQuery table optimization
CLUSTERING_FIELDS=dealName,status

# Time partitioning field
TIME_PARTITIONING_FIELD=createdAt

# Enable wildcards to sync subcollections
WILDCARD=false