rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /deals/{dealId} {
      // A user must be logged in to create a deal.
      // The ownerId in the new document must match their own UID.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // A user can only read/update/delete a deal if they are the owner.
      allow read, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // This is required to allow the frontend to query and listen to the 'deals' collection.
    // The rules above will still be checked for each document in the results.
    match /deals/{document=**} {
      allow list: if request.auth != null;
    }
  }
}